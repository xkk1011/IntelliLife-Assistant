# =============================================================================
# 智享生活助手 (IntelliLife Assistant) - 环境变量配置示例
# =============================================================================

# -----------------------------------------------------------------------------
# 应用基础配置
# -----------------------------------------------------------------------------
# 应用运行环境 (development, production, test)
NODE_ENV=development

# 应用访问URL (生产环境需要修改为实际域名)
NEXTAUTH_URL=http://localhost:3000

# 应用端口 (可选，默认3000)
PORT=3000

# -----------------------------------------------------------------------------
# 数据库配置
# -----------------------------------------------------------------------------
# MySQL数据库连接字符串
# 格式: mysql://用户名:密码@主机:端口/数据库名
DATABASE_URL="mysql://root:root@localhost:3306/intellilife_assistant"

# 数据库连接池配置 (可选)
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30000

# -----------------------------------------------------------------------------
# NextAuth.js 认证配置
# -----------------------------------------------------------------------------
# NextAuth.js 密钥 (生产环境必须使用强密钥)
# 生成方法: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-please-change-in-production"

# JWT 令牌过期时间 (秒)
JWT_EXPIRES_IN=86400

# 会话过期时间 (秒)
SESSION_MAX_AGE=2592000

# -----------------------------------------------------------------------------
# 邮件服务配置
# -----------------------------------------------------------------------------
# Resend API密钥 (用于发送邮件提醒)
RESEND_API_KEY="your-resend-api-key-here"

# 发件人邮箱地址
FROM_EMAIL="noreply@yourdomain.com"

# 发件人名称
FROM_NAME="智享生活助手"

# 邮件模板配置
EMAIL_TEMPLATE_DIR="./src/templates/email"

# -----------------------------------------------------------------------------
# 文件存储配置
# -----------------------------------------------------------------------------
# 文件上传根目录
UPLOAD_DIR="./public/uploads"

# 视频文件存储目录
VIDEO_UPLOAD_DIR="./public/uploads/videos"

# 头像文件存储目录
AVATAR_UPLOAD_DIR="./public/uploads/avatars"

# 最大文件上传大小 (字节)
MAX_FILE_SIZE=104857600

# 允许的视频文件类型
ALLOWED_VIDEO_TYPES="video/mp4,video/webm,video/avi"

# 允许的图片文件类型
ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/gif,image/webp"

# -----------------------------------------------------------------------------
# 安全配置
# -----------------------------------------------------------------------------
# API请求速率限制 (每分钟请求数)
RATE_LIMIT_PER_MINUTE=100

# 密码最小长度
PASSWORD_MIN_LENGTH=8

# 密码复杂度要求 (true/false)
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=false

# CORS允许的域名 (生产环境配置)
CORS_ORIGIN="http://localhost:3000"

# -----------------------------------------------------------------------------
# 日志配置
# -----------------------------------------------------------------------------
# 日志级别 (error, warn, info, debug)
LOG_LEVEL=info

# 日志文件路径
LOG_FILE_PATH="./logs/app.log"

# 错误日志文件路径
ERROR_LOG_PATH="./logs/error.log"

# 是否启用控制台日志
ENABLE_CONSOLE_LOG=true

# -----------------------------------------------------------------------------
# 缓存配置 (可选 - Redis)
# -----------------------------------------------------------------------------
# Redis连接URL (如果使用Redis缓存)
# REDIS_URL="redis://localhost:6379"

# 缓存过期时间 (秒)
CACHE_TTL=3600

# -----------------------------------------------------------------------------
# 监控和分析配置
# -----------------------------------------------------------------------------
# 是否启用性能监控
ENABLE_PERFORMANCE_MONITORING=false

# 是否启用错误追踪
ENABLE_ERROR_TRACKING=true

# 是否启用用户行为分析
ENABLE_ANALYTICS=false

# -----------------------------------------------------------------------------
# 第三方服务配置 (可选)
# -----------------------------------------------------------------------------
# Google OAuth (如果启用Google登录)
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"

# 短信服务配置 (如果启用短信提醒)
# SMS_API_KEY="your-sms-api-key"
# SMS_API_SECRET="your-sms-api-secret"

# -----------------------------------------------------------------------------
# 开发环境专用配置
# -----------------------------------------------------------------------------
# 是否启用调试模式
DEBUG=true

# 是否显示详细错误信息
SHOW_ERROR_DETAILS=true

# 是否启用热重载
ENABLE_HOT_RELOAD=true

# 是否跳过邮件发送 (开发环境)
SKIP_EMAIL_SENDING=true

# -----------------------------------------------------------------------------
# 生产环境专用配置
# -----------------------------------------------------------------------------
# 是否启用HTTPS强制重定向
# FORCE_HTTPS=true

# 是否启用安全头部
# ENABLE_SECURITY_HEADERS=true

# 是否启用压缩
# ENABLE_COMPRESSION=true

# 静态资源CDN域名
# CDN_DOMAIN="https://cdn.yourdomain.com"

# -----------------------------------------------------------------------------
# 备份和维护配置
# -----------------------------------------------------------------------------
# 数据库备份目录
BACKUP_DIR="./backups"

# 自动备份间隔 (小时)
AUTO_BACKUP_INTERVAL=24

# 备份文件保留天数
BACKUP_RETENTION_DAYS=30

# 维护模式 (true/false)
MAINTENANCE_MODE=false

# 维护模式提示信息
MAINTENANCE_MESSAGE="系统正在维护中，请稍后再试"

# =============================================================================
# 配置说明
# =============================================================================
# 1. 复制此文件为 .env.local 并根据实际情况修改配置值
# 2. 生产环境部署时，请确保所有敏感信息都已正确配置
# 3. 不要将包含真实密钥的 .env 文件提交到版本控制系统
# 4. 定期更新密钥和令牌以确保安全性
# =============================================================================
